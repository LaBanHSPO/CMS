{% extends '_layout.' + getConfig('viewExtension') %}

{% block content %}
    <div class="breadcrumbs">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 col-sm-4">
                    <h1>
                        Blog
                    </h1>
                </div>
                <div class="col-lg-8 col-sm-8">
                    <ol class="breadcrumb pull-right">
                        <li>
                            <a href="/">
                                Home
                            </a>
                        </li>
                        <li class="active">
                            Blog
                        </li>
                    </ol>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-lg-9 ">
                {% for post in posts %}
                    <div class="blog-item">
                        <div class="row">
                            <div class="col-lg-2 col-sm-2">
                                <div class="date-wrap">
                                    <span class="date">
                                        {{ post.published_at | moment("DD") }}
                                    </span>
                                    <span class="month">
                                        {{ post.published_at | moment("MMMM") }}
                                    </span>
                                </div>
                            </div>
                            <div class="col-lg-10 col-sm-10">
                                <div class="blog-img">
                                    <script>//TODO: remove host name</script>
                                    <img src="{{ post.image }}" alt=""/>
                                </div>

                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-2 col-sm-2 text-right">
                            </div>
                            <div class="col-lg-10 col-sm-10">
                                <h1>
                                    <a href="/blog/{{ post.id }}/{{ post.alias }}">
                                        {{ post.title }}
                                    </a>
                                </h1>

                                <p>
                                    {{ post.intro_text | safe }}
                                </p>
                                <a href="/blog/{{ post.id }}/{{ post.alias }}" class="btn btn-primary">
                                    Continue Reading
                                </a>
                            </div>
                        </div>
                    </div>
                {% endfor %}

                <div class="text-center">
                    {{ paginateLinks(totalPage, currentPage, '/blog/page-{page}') | safe }}
                </div>
            </div>

            <div class="col-lg-3">
                <div class="blog-side-item">
                    {{ getSidebar("right-sidebar") | async | safe }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
