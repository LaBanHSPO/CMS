{% extends 'layout.twig' %}

{% block content %}
<div class="error-page">
    <h2 class="headline text-red">No Permission</h2>
    <div class="error-content">
        <h3><i class="fa fa-warning text-red"></i> Oops! You are not permissions.</h3>
        <p>
            Please contact to Administrator to ask more permissions
            Meanwhile, you may <a href="/admin">return to dashboard</a> or try another features.
        </p>
        <form class="search-form">
            <div class="input-group">
                <input type="text" name="search" class="form-control" placeholder="Search">
                <div class="input-group-btn">
                    <button type="submit" name="submit" class="btn btn-danger btn-flat"><i class="fa fa-search"></i></button>
                </div>
            </div><!-- /.input-group -->
        </form>
    </div>
</div>
{% endblock %}